# AI Code Editor Backend Configuration

# Server Settings
PORT=8080
NODE_ENV=development

# Ollama Configuration
OLLAMA_HOST=192.168.4.88:11434

# Workspace Directory (where files are stored)
WORKSPACE_DIR=/home/user/ai-editor-workspace

# Remote Servers Configuration (JSON array)
# Example for multi-computer setup:
REMOTE_SERVERS=[]
  {
    "id": "computer-2",
    "name": "Development Server",
    "host": "192.168.1.100",
    "port": 8080,
    "type": "development"
  },
  {
    "id": "computer-3",
    "name": "Production Server",
    "host": "192.168.1.101",
    "port": 8080,
    "type": "production"
  }
]

# Security Settings
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database (optional for future expansion)
DATABASE_URL=sqlite:./ai-editor.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Features
ENABLE_FILE_WATCHER=true
ENABLE_TERMINAL=true
ENABLE_AI=true
ENABLE_REMOTE_SERVERS=true

# AI Settings
DEFAULT_AI_MODEL=llama3.1
AI_TIMEOUT=30000
AI_MAX_TOKENS=4000

# File System
MAX_FILE_SIZE=10mb
ALLOWED_FILE_EXTENSIONS=.js,.ts,.tsx,.jsx,.html,.css,.scss,.json,.md,.py,.java,.cpp,.c,.h,.go,.rs,.php,.rb,.swift,.kt,.dart,.vue,.svelte,.yaml,.yml,.xml,.sql,.sh,.dockerfile

# Terminal Settings
TERMINAL_TIMEOUT=300000
MAX_TERMINALS=10

# Upload Settings
MAX_UPLOAD_SIZE=50mb
UPLOAD_TIMEOUT=30000 
